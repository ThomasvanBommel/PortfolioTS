{
    "include": ["src/**/*.ts"],
    "compilerOptions": {                      
        "lib": ["es2019"],     
        "strict": true,   
        "target": "es5",                            
        "rootDir": "../", 
        "baseUrl": "../",                
        "outDir": "build",   
        "module": "commonjs",  
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["../common"],
    }
}
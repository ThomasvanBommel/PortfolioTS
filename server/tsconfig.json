{
    "include": ["src"],
    "compilerOptions": {                      
        "lib": ["es6"],     
        "strict": true,   
        "target": "es5",                            
        "rootDir": "src",                 
        "outDir": "build",                      
        "module": "commonjs",     
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    }
}
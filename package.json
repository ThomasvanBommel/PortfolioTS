{
  "name": "portfoliots",
  "version": "1.0.0",
  "description": "Portfolio written with typescript",
  "main": "index.js",
  "scripts": {
    "watch": "npm run build-client -- -w --env --dev",
    
    "prebuild-server": "rm -rf ./server/build",
    "build-server": "tsc --build ./server/",
    
    "prebuild-client": "rm -rf ./client/build",
    "build-client": "webpack --config ./config/webpack.config.js",

    "build": "npm run build-server && npm run build-client",
    "config": "node ./common/create-config",

    "prestart": "npm run config && npm run build",
    "start": "node ./server/build/index.js",
    
    "pretest": "npm run config",
    "test": "npm run mocha-test && npm run build",
    "posttest": "npm run cleanup",

    "cleanup": "npm run delete-server-test && npm run delete-client-test && npm run prebuild-client",
    "postcleanup": "rm -rf ./common/.client.config.json && rm -rf ./common/.server.config.json",
    
    "mocha-test": "npm run server-test && npm run client-test",
    
    "delete-server-test": "rm -rf ./test-server/build && rm -rf ./server/build && rm -rf ./server/tsconfig.tsbuildinfo",
    "preserver-test": "npm run delete-server-test && npm run config",
    "server-test": "tsc --build ./test-server/ && mocha './test-server/build/**/*.js'",
    "postserver-test": "npm run delete-server-test",
    
    "delete-client-test": "rm -rf ./test-client/build",
    "preclient-test": "npm run delete-client-test && npm run config",
    "client-test": "webpack --config ./test-client/webpack.config.js && mocha -r jsdom-global/register './test-client/**/build/*.js'",
    "postclient-test": "npm run delete-client-test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThomasvanBommel/PortfolioTS.git"
  },
  "author": "Thomas vanBommel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ThomasvanBommel/PortfolioTS/issues"
  },
  "homepage": "https://github.com/ThomasvanBommel/PortfolioTS#readme",
  "dependencies": {
    "@types/express": "^4.17.11",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "css-loader": "^5.0.2",
    "express": "^4.17.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.17",
    "typescript": "^4.1.3",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.1",
    "jsdom": "^16.5.1",
    "jsdom-global": "^3.0.2",
    "mocha": "^8.3.0"
  }
}
